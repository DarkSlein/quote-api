# Database
DATABASE_URL=postgresql+asyncpg://quote_user:quote_pass@localhost:5432/quotes
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
SQL_ECHO=false

# Redis
REDIS_URL=redis://localhost:6379/0

# API
DEBUG=true
API_V1_STR=/api/v1
PROJECT_NAME=Quote API
VERSION=1.0.0

# Background tasks
UPDATE_INTERVAL=3600
MAX_WORKERS=5

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# CORS
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# External APIs
FORISMATIC_API_URL=http://api.forismatic.com/api/1.0/
WIKIQUOTE_API_URL=https://ru.wikiquote.org/w/api.php

# Testing
TESTING=false